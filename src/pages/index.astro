---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE } from '../consts';
import { estimateReadingTime } from '../utils/readingTime';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
---

<BaseLayout>
  <section class="grid cols2">
    <div class="card">
      <span class="badge">Field journal</span>
      <h1 class="h1">{SITE.name}</h1>
      <p class="muted" style="margin:0 0 18px">
        {SITE.description}
      </p>

      <div class="cta">
        <b><a href="/toolkit">Free toolkit:</a></b> Debt Escape Dashboard + Call Scripts Pack + Gig Profit Tracker.
        <div class="muted" style="margin-top:6px">No spam. Just the stuff that works.</div>
      </div>

      <hr />

      <div class="grid" style="gap:10px">
        <a class="focusable" href="/blog/start-here"><b>Start here →</b></a>
        <span class="muted">If you’re stuck in minimums, start with the method and the weekly dashboard.</span>
      </div>
    </div>

    <aside class="card">
      <h2 class="h2" style="margin-top:0">What you’ll find here</h2>
      <ul class="muted" style="margin:0; padding-left:18px">
        <li>Debt payoff tactics that work with real cashflow constraints</li>
        <li>Call scripts + templates (APR, fees, hardship programs)</li>
        <li>Gig income: profit-first tracking, schedules, and burnout-proof systems</li>
        <li>Weekly review routines that prevent “surprise” weeks</li>
      </ul>
      <hr />
      <div class="muted">New here? Read <a href="/blog/start-here">Start Here</a>.</div>
    </aside>
  </section>

  <section style="margin-top:18px">
    <h2 class="h2">Latest posts</h2>
    <ul class="post-list">
      {posts.map((p) => (
        <li class="card post-card">
          <div class="post-card-top">
            <a class="post-card-title" href={`/blog/${p.slug}`}>{p.data.title}</a>
            <div class="post-meta">
              <span>{p.data.pubDate.toLocaleDateString()}</span>
              <span aria-hidden="true">•</span>
              <span>{estimateReadingTime(p.body ?? '').minutes} min read</span>
            </div>
          </div>
          {p.data.description && <p class="post-card-desc">{p.data.description}</p>}
          {p.data.tags?.length ? (
            <div class="tag-chips">
              {p.data.tags.slice(0, 4).map((t) => (
                <a class="tag-chip" href={`/tags/${t}/`}>{t}</a>
              ))}
            </div>
          ) : null}
        </li>
      ))}
    </ul>

    <div style="margin-top:14px"><a href="/blog">All posts →</a></div>
  </section>
</BaseLayout>
