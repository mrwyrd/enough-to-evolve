---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { estimateReadingTime } from '../../utils/readingTime';

const PAGE_SIZE = 10;

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const totalPages = Math.max(1, Math.ceil(posts.length / PAGE_SIZE));
const slice = posts.slice(0, PAGE_SIZE);
---

<BaseLayout title="Blog">
  <h1 class="h1">Blog</h1>
  <p class="muted">Practical posts, templates, scripts, and experiments. No motivational foam.</p>

  <ul class="post-list">
    {slice.map((p) => (
      <li class="card post-card">
        <div class="post-card-top">
          <a class="post-card-title" href={`/blog/${p.slug}`}>{p.data.title}</a>
          <div class="post-meta">
            <span>{p.data.pubDate.toLocaleDateString()}</span>
            <span aria-hidden="true">•</span>
            <span>{estimateReadingTime(p.body ?? '').minutes} min read</span>
          </div>
        </div>
        {p.data.description && <p class="post-card-desc">{p.data.description}</p>}
        {p.data.tags?.length ? (
          <div class="tag-chips">
            {p.data.tags.slice(0, 4).map((t) => (
              <a class="tag-chip" href={`/tags/${t}/`}>{t}</a>
            ))}
          </div>
        ) : null}
      </li>
    ))}
  </ul>

  {totalPages > 1 && (
    <div style="margin-top: 14px">
      <a class="focusable" href="/blog/page/2/"><b>Older posts →</b></a>
    </div>
  )}
</BaseLayout>
