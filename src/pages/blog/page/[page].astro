---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { estimateReadingTime } from '../../../utils/readingTime';

export async function getStaticPaths() {
  const PAGE_SIZE = 10;
  const posts = (await getCollection('blog', ({ data }) => !data.draft))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  const totalPages = Math.max(1, Math.ceil(posts.length / PAGE_SIZE));
  const pages = Array.from({ length: totalPages }, (_, i) => i + 1);

  return pages.map((page) => ({
    params: { page: String(page) },
    props: { page, totalPages },
  }));
}

const { page, totalPages } = Astro.props;
const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const PAGE_SIZE = 10;
const start = (page - 1) * PAGE_SIZE;
const slice = posts.slice(start, start + PAGE_SIZE);
---

<BaseLayout title={`Blog (page ${page})`}>
  <h1 class="h1">Blog</h1>
  <p class="muted">Page {page} of {totalPages}</p>

  <ul class="post-list">
    {slice.map((p) => (
      <li class="card post-card">
        <div class="post-card-top">
          <a class="post-card-title" href={`/blog/${p.slug}`}>{p.data.title}</a>
          <div class="post-meta">
            <span>{p.data.pubDate.toLocaleDateString()}</span>
            <span aria-hidden="true">•</span>
            <span>{estimateReadingTime(p.body ?? '').minutes} min read</span>
          </div>
        </div>
        {p.data.description && <p class="post-card-desc">{p.data.description}</p>}
        {p.data.tags?.length ? (
          <div class="tag-chips">
            {p.data.tags.slice(0, 4).map((t) => (
              <a class="tag-chip" href={`/tags/${t}/`}>{t}</a>
            ))}
          </div>
        ) : null}
      </li>
    ))}
  </ul>

  <div style="display:flex; gap:12px; margin-top: 14px; flex-wrap: wrap">
    {page > 1 && <a class="focusable" href={page === 2 ? '/blog/' : `/blog/page/${page - 1}/`}><b>← Newer</b></a>}
    {page < totalPages && <a class="focusable" href={`/blog/page/${page + 1}/`}><b>Older →</b></a>}
  </div>
</BaseLayout>
