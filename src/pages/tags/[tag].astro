---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { estimateReadingTime } from '../../utils/readingTime';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const tags = new Set();
  for (const p of posts) for (const t of p.data.tags ?? []) tags.add(t);

  return [...tags].map((tag) => ({ params: { tag }, props: { tag } }));
}

const { tag } = Astro.props;

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .filter((p) => (p.data.tags ?? []).includes(tag))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`Tag: ${tag}`}>
  <h1 class="h1">Tag: {tag}</h1>
  <p class="muted">{posts.length} post(s)</p>

  <ul class="post-list">
    {posts.map((p) => (
      <li class="card post-card">
        <div class="post-card-top">
          <a class="post-card-title" href={`/blog/${p.slug}`}>{p.data.title}</a>
          <div class="post-meta">
            <span>{p.data.pubDate.toLocaleDateString()}</span>
            <span aria-hidden="true">â€¢</span>
            <span>{estimateReadingTime(p.body ?? '').minutes} min read</span>
          </div>
        </div>
        {p.data.description && <p class="post-card-desc">{p.data.description}</p>}
        {p.data.tags?.length ? (
          <div class="tag-chips">
            {p.data.tags.slice(0, 4).map((t) => (
              <a class="tag-chip" href={`/tags/${t}/`}>{t}</a>
            ))}
          </div>
        ) : null}
      </li>
    ))}
  </ul>
</BaseLayout>
